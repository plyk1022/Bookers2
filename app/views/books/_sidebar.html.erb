<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100, 100) %>
  <table class="table">
    <tbody>
      <tr>
        <td>name</td>
        <td><%= user.name %></td>
      </tr>
      
      <tr>
        <td>introduction</td>
        <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>
  
  <button>
    <i class="fa-solid fa-user-gear">
    <%= link_to '（アイコン）編集ページ', edit_user_path(@user.id) %>
    </i>
  </button>
  
  
  
  <h2>New book</h2>
  <div class="form">
    <%= form_with model: book do |f| %>
    
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    
    <%= f.label :body, 'Opinion' %><br>
    <%= f.text_area :body %><br>
    
    <%= f.submit 'Create book' %>
    
    <% end %>
  </div>
</div>
