<h1>Books#index</h1>



<h2>User info</h2>
<table>
  <tbody>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>
    
    <tr>
      <td>introduction</td>
      <td><%= @user.introduction %></td>
    </tr>
  </tbody>
</table>


<h2>New book</h2>
<%= form_with model: @book do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :body, 'Opinion' %>
  <%= f.text_area :body %>
  
  
  <%= f.submit 'Create book' %>

<% end %>
  


<h2>Books</h2>



  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td>プロフィール画像</td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    </tbody>
    
    <% end %>
  </table>




