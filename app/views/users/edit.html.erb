<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px- px-sm-0 mx-auto">
      <h2>User info</h2>

      <% if @user.errors.any? %>
        <div class="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        </div>
      <% end %>

      <div class="form">
              <%= form_with model: @user do |f| %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :profile_image, 'Image' %>
          <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit 'Update User', class: "btn btn-secondary" %>
        </div>
         <% end %>
      </div>



    </div>
  </div>
</div>