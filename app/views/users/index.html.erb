<h2>User info</h2>

<%= image_tag @user.get_profile_image(100, 100) %>
<table>
  <tbody>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>

    <tr>
      <td>introduction</td>
      <td><%= @user.introduction %></td>
    </tr>
  </tbody>
</table>

<%= link_to '（アイコン）編集ページ', edit_user_path(@user.id) %>


<h2>New book</h2>
<%= form_with model: @book do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body, 'Opinion' %>
  <%= f.text_area :body %>


  <%= f.submit 'Create book' %>

<% end %>



<h2>Users</h2>
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>

    <% @users.each do |user| %>
    <tbody>
      <tr>
        <td>
            <%= image_tag user.get_profile_image(100, 100) %>
        </td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user_path(user.id) %></td>
      </tr>
    </tbody>

    <% end %>
  </table>




